/*
 * THEME: Neon Inspired Theme
 * Inspired by GTRONICK's NeonButtons.qss and user request for green gradient.
 * Author: Gemini
 *
 * This theme aims for a dark, futuristic aesthetic with glowing neon accents
 * on interactive elements, while maintaining readability.
 */

/* --- Color Palette --- */
/* Backgrounds: Dark grays and greens */
/* Text: Light grays/whites */
/* Neon Accents: Greenish-yellow, Purple */

/* --- General Styling --- */
QWidget {
    /* Apply the gradient here, as it's the base for many widgets including the central one */
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #1A1A1A, /* Darkest point */
                                stop: 0.3 #2E403A, /* Dark green */
                                stop: 0.7 #3A5048, /* Slightly lighter green */
                                stop: 1 #1A1A1A); /* Darkest point */
    color: #E0E0E0;            /* Light text for readability */
    font-family: "Segoe UI", "Inter", sans-serif; /* Modern sans-serif font */
    font-size: 10pt;
    border: none; /* No global border */
}

/* --- Main Application Window --- */
/* Remove QMainWindow and QWidget#centralWidget specific background, rely on QWidget */
QMainWindow {
    background: transparent; /* Ensure QMainWindow itself is transparent */
    border: none;
}

/* --- Buttons (Neon Inspired) --- */
QPushButton {
    border-style: solid;
    border-color: #2C2C2C; /* Darker, subtle border */
    border-width: 1px;
    border-radius: 5px;
    color: #E0E0E0; /* Light text for contrast */
    padding: 6px 12px; /* More generous padding */
    background-color: #1A1A1A; /* Dark background */
    font-weight: bold;
    min-height: 24px;
    outline: none; /* Remove focus rectangle */
}

QPushButton::default {
    border-style: solid;
    border-color: #3A3A3A;
    border-width: 1px;
    border-radius: 5px;
    color: #FFFFFF;
    padding: 6px 12px;
    background-color: #2A2A2A;
}

QPushButton:hover {
    border-style: solid;
    /* Greenish-yellow neon glow on hover */
    border-top-color: qlineargradient(spread:pad, x1:0, y1:1, x2:1, y2:1, stop:0 #A0FF00, stop:0.4 #A0FF00, stop:0.5 #1A1A1A, stop:1 #1A1A1A);
    border-bottom-color: qlineargradient(spread:pad, x1:0, y1:1, x2:1, y2:1, stop:0 #1A1A1A, stop:0.5 #1A1A1A, stop:0.6 #A0FF00, stop:1 #A0FF00);
    border-left-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 #A0FF00, stop:0.3 #A0FF00, stop:0.7 #1A1A1A, stop:1 #1A1A1A);
    border-right-color: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, stop:0 #A0FF00, stop:0.3 #A0FF00, stop:0.7 #1A1A1A, stop:1 #1A1A1A);
    border-width: 2px;
    border-radius: 1px; /* Slightly less rounded for sharper glow */
    color: #F0F0F0; /* Slightly brighter text on hover */
    padding: 6px 12px;
}

QPushButton:pressed {
    border-style: solid;
    /* Purple neon glow on pressed */
    border-top-color: qlineargradient(spread:pad, x1:0, y1:1, x2:1, y2:1, stop:0 #FF00FF, stop:0.4 #FF00FF, stop:0.5 #1A1A1A, stop:1 #1A1A1A);
    border-bottom-color: qlineargradient(spread:pad, x1:0, y1:1, x2:1, y2:1, stop:0 #1A1A1A, stop:0.5 #1A1A1A, stop:0.6 #FF00FF, stop:1 #FF00FF);
    border-left-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 #FF00FF, stop:0.3 #FF00FF, stop:0.7 #1A1A1A, stop:1 #1A1A1A);
    border-right-color: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, stop:0 #FF00FF, stop:0.3 #FF00FF, stop:0.7 #1A1A1A, stop:1 #1A1A1A);
    border-width: 2px;
    border-radius: 1px;
    color: #F0F0F0;
    padding: 6px 12px;
}

/* --- Line Edits / Text Inputs --- */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #2A2A2A; /* Darker background */
    border: 1px solid #4A4A4A; /* Subtle border */
    border-radius: 4px;
    padding: 5px;
    color: #E0E0E0;
    selection-background-color: #A0FF00; /* Neon green accent for selection */
    selection-color: #1A1A1A;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #A0FF00; /* Neon green border on focus */
}

/* --- Labels --- */
QLabel {
    color: #E0E0E0;
}

/* --- List / Tree / Table Widgets --- */
QListWidget, QTreeWidget, QTableWidget {
    background-color: #2A2A2A;
    border: 1px solid #4A4A4A;
    border-radius: 4px;
    alternate-background-color: #222222; /* Subtle striping */
    color: #E0E0E0;
    gridline-color: #3A3A3A;
}

QListWidget::item:selected, QTreeWidget::item:selected, QTableWidget::item:selected {
    background-color: #3A5048; /* Dark green accent for selection */
    color: #FFFFFF;
    border: none;
}

QListWidget::item:hover, QTreeWidget::item:hover, QTableWidget::item:hover {
    background-color: #222222;
}

/* --- Combo Boxes --- */
QComboBox {
    background-color: #2A2A2A;
    border: 1px solid #4A4A4A;
    border-radius: 4px;
    padding: 5px 10px 5px 5px;
    color: #E0E0E0;
    min-width: 80px;
}

QComboBox:hover {
    border-color: #6A6A6A;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #4A4A4A;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

QComboBox::down-arrow {
    image: none; /* Removed image dependency */
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 6px solid #E0E0E0; /* Custom arrow using borders, light color */
    width: 0px;
    height: 0px;
    margin: 0 auto;
}

QComboBox QAbstractItemView {
    background-color: #2A2A2A;
    border: 1px solid #4A4A4A;
    selection-background-color: #3A5048;
    selection-color: #E0E0E0;
    color: #E0E0E0;
}

/* --- Scroll Bars --- */
QScrollBar:vertical, QScrollBar:horizontal {
    border: none;
    background: #1A1A1A;
    width: 10px; /* for vertical */
    height: 10px; /* for horizontal */
    margin: 0px;
}

QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
    background: #4A4A4A;
    border-radius: 5px;
    min-height: 20px; /* vertical */
    min-width: 20px;  /* horizontal */
}

QScrollBar::handle:vertical:hover, QScrollBar::handle:horizontal:hover {
    background: #6A6A6A;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical,
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical,
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* --- Status Bar --- */
QStatusBar {
    background-color: #2A2A2A;
    color: #E0E0E0;
    border-top: 1px solid #4A4A4A;
}

/* --- Menu Bar --- */
QMenuBar {
    background-color: #2A2A2A;
    color: #E0E0E0;
    border-bottom: 1px solid #4A4A4A;
}

QMenuBar::item:selected {
    background-color: #3A5048;
    color: #FFFFFF;
}

QMenu { /* Context menus */
    background-color: #2A2A2A;
    border: 1px solid #4A4A4A;
    border-radius: 4px;
    color: #E0E0E0;
}

QMenu::item:selected {
    background-color: #3A5048;
    color: #FFFFFF;
}

/* --- GroupBox --- */
QGroupBox {
    background-color: #1A1A1A;
    border: 1px solid #4A4A4A;
    border-radius: 4px;
    margin-top: 1em;
    padding-top: 12px;
    color: #E0E0E0;
    font-weight: bold;
    font-size: 11pt;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 4px 8px;
    background-color: #2A2A2A;
    border: 1px solid #4A4A4A;
    border-radius: 4px;
    color: #A0FF00; /* Neon green for title */
}

/* --- TabWidget --- */
QTabWidget::pane {
    border: 1px solid #4A4A4A;
    background-color: #1A1A1A;
    border-radius: 4px;
}

QTabBar::tab {
    background: #2A2A2A;
    border: 1px solid #4A4A4A;
    border-bottom: none; /* Seamless with pane */
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    min-width: 80px;
    padding: 8px 12px;
    color: #E0E0E0;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background: #3A5048; /* Dark green accent */
    border-bottom-color: #3A5048;
    color: #FFFFFF;
    font-weight: bold;
}

QTabBar::tab:hover:!selected {
    background: #222222;
    color: #F0F0F0;
}
