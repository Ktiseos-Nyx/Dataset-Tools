/* General Styles */
QWidget {
    background-color: #0D79A6;
    color: #EADDC7;
    border: none; /* Removed global border for cleaner look */
}

/* Buttons */
QPushButton {
    background-color: #4F8BA8;
    color: #EADDC7;
    border: 1px solid #5B4A1E;
    padding: 5px;
    border-radius: 3px;
}

QPushButton:hover {
    background-color: #89A7B5;
}

QPushButton:pressed {
    background-color: #5B4A1E;
}

/* LineEdit and TextEdit */
QLineEdit, QTextEdit {
    background-color: #89A7B5;
    color: #EADDC7; /* Changed to light beige for readability */
    border: 1px solid #5B4A1E;
    padding: 3px;
    border-radius: 3px;
    selection-background-color: #5B4A1E; /* Adjusted for better contrast */
    selection-color: #EADDC7; /* Adjusted for better contrast */
}

/* Labels */
QLabel {
    color: #EADDC7;
}

/* GroupBox */
QGroupBox {
    background-color: #0D79A6;
    border: 1px solid #5B4A1E;
    margin-top: 1ex; /* leave space at the top for the title */
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center; /* Changed from top left to top center for better aesthetics */
    padding: 0 3px;
    background-color: #4F8BA8;
    color: #EADDC7;
}

/* ComboBox */
QComboBox {
    background-color: #89A7B5;
    color: #EADDC7; /* Changed to light beige for readability */
    border: 1px solid #5B4A1E;
    padding: 1px 0px 1px 3px; /* top, right, bottom, left */
    border-radius: 3px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
    border-left-width: 1px;
    border-left-color: #5B4A1E;
    border-left-style: solid; /* just a single line */
    border-top-right-radius: 3px; /* same radius as the QComboBox */
    border-bottom-right-radius: 3px;
}

QComboBox::down-arrow {
    image: none; /* Removed image dependency */
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 6px solid #EADDC7; /* Custom arrow using borders, light beige color */
    width: 0px;
    height: 0px;
    margin: 0 auto;
}

/* ScrollBar */
QScrollBar:vertical {
    border: 1px solid #5B4A1E;
    background: #0D79A6;
    width: 10px;
    margin: 15px 0 15px 0;
}

QScrollBar::handle:vertical {
    background: #4F8BA8;
    min-height: 20px;
}

QScrollBar::add-line:vertical {
    border: 1px solid #5B4A1E;
    background: #89A7B5;
    height: 15px;
    subcontrol-origin: margin; /* Changed from bottom to margin for consistency */
    subcontrol-position: bottom;
}

QScrollBar::sub-line:vertical {
    border: 1px solid #5B4A1E;
    background: #89A7B5;
    height: 15px;
    subcontrol-origin: margin; /* Changed from top to margin for consistency */
    subcontrol-position: top;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
    background: #EADDC7; /* Changed to light beige */
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

/* CheckBox */
QCheckBox {
    color: #EADDC7;
}

QCheckBox::indicator {
    width: 13px;
    height: 13px;
    border: 1px solid #5B4A1E;
    background-color: #89A7B5;
}

QCheckBox::indicator:checked {
    background-color: #4F8BA8;
}

/* RadioButton */
QRadioButton {
    color: #EADDC7;
}

QRadioButton::indicator {
    width: 13px;
    height: 13px;
    border: 1px solid #5B4A1E;
    border-radius: 6px; /* Makes it circular */
    background-color: #89A7B5;
}

QRadioButton::indicator:checked {
    background-color: #4F8BA8;
}

/* TabWidget */
QTabWidget::pane {
    border: 1px solid #5B4A1E;
    background-color: #0D79A6;
}

QTabBar::tab {
    background: #89A7B5;
    border: 1px solid #5B4A1E;
    border-bottom: none; /* Removed border-bottom-color for cleaner look */
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    min-width: 8ex;
    padding: 2px;
    color: #EADDC7; /* Changed to light beige for readability */
}

QTabBar::tab:selected, QTabBar::tab:hover {
    background: #4F8BA8;
}

QTabBar::tab:selected {
    border-color: #5B4A1E;
    border-bottom-color: #4F8BA8; /* make the selected tab appear above the pane */
}

/* MenuBar */
QMenuBar {
    background-color: #89A7B5;
    color: #EADDC7; /* Changed to light beige for readability */
}

QMenuBar::item {
    spacing: 3px;
    padding: 1px 4px;
    background: transparent;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background: #4F8BA8;
}

QMenuBar::item:pressed {
    background: #5B4A1E;
}

/* Menu */
QMenu {
    background-color: #89A7B5;
    border: 1px solid #5B4A1E;
    border-radius: 3px;
}

QMenu::item {
    padding: 2px 25px 2px 20px;
    border: 1px solid transparent; /* reserve space for selection border */
}

QMenu::item:selected {
    background-color: #4F8BA8;
    color: #EADDC7; /* Changed to light beige for readability */
}

QMenu::separator {
    height: 1px;
    background: #5B4A1E;
    margin-left: 10px;
    margin-right: 10px;
}