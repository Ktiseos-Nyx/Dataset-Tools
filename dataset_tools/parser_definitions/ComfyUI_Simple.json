{
  "parser_name": "ComfyUI_Simple",
  "priority": 120,
  "target_file_types": ["PNG"],

  "detection_rules": [
    {
      "comment": "Check if workflow or prompt PNG chunk exists and contains JSON",
      "condition": "OR",
      "rules": [
        {
          "source_type": "pil_info_key",
          "source_key": "workflow",
          "operator": "is_valid_json"
        },
        {
          "source_type": "pil_info_key",
          "source_key": "prompt",
          "operator": "is_valid_json"
        }
      ]
    }
  ],

  "base_format_class": "ComfyUI",
  "primary_data_source_for_raw": {
    "source_type": "png_chunk",
    "source_key": "workflow"
  }
}
